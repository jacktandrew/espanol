<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Size</th>
    <th>Level</th>
    <th>Matchless</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.category %></td>
    <td><%= game.size %></td>
    <td><%= game.level %></td>
    <td><%= game.matchless %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

