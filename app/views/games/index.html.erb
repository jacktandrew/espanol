<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Size</th>
    <th>Category</th>
    <th>Level</th>
    <th>Matchless</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.size %></td>
    <td><%= game.category %></td>
    <td><%= game.level %></td>
    <td><%= game.matchless %></td>
    <td><%= link_to 'Play', play_game_path(game), class: 'play' %></td>
    <td><%= link_to 'Edit', edit_game_path(game), class: 'edit' %></td>
  </tr>
<% end %>
</table>

